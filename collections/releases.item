{.section item}

<article id="release-{id}" class="release {@|item-classes}" data-item-id="{id}">
    <div class="release-viewport-container">
        <div class="release-container">
            <div class="section-release-header">
                <div class="header-wrapper">
                    <div class="header-spread-wrapper">
                        <img {customContent.banner|image-meta}/>
                    </div>
                    <div class="header-info-wrapper">
                        <div class="header-branding">
                            <span>THAT'S WHAT</span>
                            <br>
                            <span>SHE SAID</span>
                        </div>
                        <div class="header-issue">
                            <span class="vol">{customContent.volume}</span>
                            <span class="dat">{customContent.date}</span>
                        </div>
                    </div>
                </div>
            </div>
            <div id="release-body" class="section-release-body">
                <div class="body-container">
                    <!--MAIN CONTENT-->
                    {body}

                    <!--BLOG INJECTION-->
                    {postItemInjectCode}

                    <!--CATEGORIES-->
                    {.repeated section categories}
                    <a class="category" href="{collection.fullUrl}?category={@|url-encode}">{@}</a>{.alternates with},
                    {.end}

                    <!--TAGS-->
                    {.repeated section tags}
                    <a class="tag" href="{collection.fullUrl}?tag={@|url-encode}">{@}</a>{.alternates with},
                    {.end}

                    <!--SHARE AND LIKE-->
                    {@|like-button}

                    <!--MORE/NEXT-->
                    {.section pagination}
                    <nav class="blog-item-pagination">

                        <!--NEWER PAGE-->
                        {.section prevItem}
                        <a href="{fullUrl}">Newer</a>
                        {.or}
                        <a class="disabled">Newer</a>
                        {.end}

                        <!--OLDER PAGE-->
                        {.section nextItem}
                        <a href="{fullUrl}">Older</a>
                        {.or}
                        <a class="disabled">Older</a>
                        {.end}

                    </nav>
                    {.end}
                </div> 

                <!--Footer with open block field -->
                <footer class="site-footer">
                    <squarespace:block-field id="footerBlocks" columns="12" />
                </footer>
            </div>
        </div>
    </div>
</article>

{.end}

<!--HEADER SCRIPT-->

<script>
    // Initial settings for navigation bar
    document.getElementById("site-navigation-wrapper-dummy").style.display = "none";

    if (window.pageYOffset <= 100) { // Only perform animations if we're above the limit
        let layoutBody = document.getElementById("release-body");
        let wrapperPowered = document.getElementById("site-navigation-wrapper-powered");

//        layoutBody.style.opacity = 0;
        wrapperPowered.style.opacity = 0;

        // Change settings on scroll
        let changed = false;
        document.addEventListener("scroll", function() {
            if (window.pageYOffset > 100 && !changed) {
                layoutBody.classList.add("animate-in");
                wrapperPowered.classList.add("animate-in");

                changed = true;
            }
        });
    }
</script>
